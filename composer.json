{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/annotations": "^1.13",
        "kint-php/kint": "^3.3",
        "paknahad/jsonapi-bundle": "^4.3",
        "paknahad/jsonapi-querifier-bundle": "^0.2.1",
        "symfony/console": "^5",
        "symfony/dotenv": "^5",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "^5",
        "symfony/maker-bundle": "^1.14",
        "symfony/yaml": "^5"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "process-timeout": 0,
        "preferred-install": {
            "*": "dist"
        },
        "platform": {
            "php": "7.4"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "node_modules/.bin/newman run ./collections/json_api.postman_collection.json -e ./collections/${APP_ENV}.postman_environment.json"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.0.*"
        }
    }
}
